                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Department.Name)
                </dd>
            </div>*@
    }
   </div>
   <br>
   @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Doctor" asp-action="Index" class="text-decoration-none fw-bold">Back to List</a>
    }
    else
    {
        <button class="bg-primary m-5"><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-white">Back Home</a></button>

    }
    
</body>
</html>



