                                                                  rel="stylesheet">
    <!-- Template Main CSS File -->
    <link href="~/css/site.css" rel="stylesheet">
  </head>

 <body >
         <h1 class="text-danger m-5">Doctors_Details</h1>
         <div class=" row">
             <div class="col-3 m-2 text-decoration-underline fw-bold">Doctor Name</div>
        <div class="col-3 text-decoration-underline fw-bold">Department Name</div>

         </div>
   <div>
    @foreach (var item in Model)
    {
        

        <div class="m-2 w-100 d-block">           
			<button class="bg-dark bg-opacity-50 w-25 h-25 text-center" style="margin:5px"><a asp-action="Details" asp-route-id="@item.Id" 
                style="color:white" />@item.Name------></button>
              
                    <a asp-route-id="@item.DepartmentId"
                     style="color:darkblue" class=" text-decoration-none"/>@item.Department.Name
               

        </div>
            @*<div class="form-group">
                <dt class="col-sm-2">
