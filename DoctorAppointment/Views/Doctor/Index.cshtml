@model IEnumerable<DoctorAppointment.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}

<h1>Doctor List</h1>


    

<table class="table">
    <thead class="bg-dark bg-opacity-75 text-white">
        <tr>
           @* <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlToPicture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalInfo)
            </th>
            <th>                
            </th>
        </tr>
    </thead>
    <tbody class="bg-black bg-opacity-25">
@foreach (var item in Model) {
        <tr class="m-1">
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlToPicture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HospitalInfo.Name)
            </td>
                <td>
                    <button class="bg-primary"><a asp-action="Edit" asp-route-id="@item.Id" style="color:white" />Edit</button>
                    <button style="background-color:forestgreen"><a asp-action="Details" asp-route-id="@item.Id" style="color:white" />Details</button>
                    <button class="bg-danger"><a asp-action="Delete" asp-route-id="@item.Id" style="color:white" />Delete</button>
                </td>
        </tr>
}
    </tbody>
    <tfoot>
        <tr>
            <td>
                <button class="float-end+" style="background-color:forestgreen"><a asp-action="Create" class="text-white fw-bold text-decoration-none">Add New Doctor</a></button>
            </td>
        </tr>
    </tfoot>
</table>
