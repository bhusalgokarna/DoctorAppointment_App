@model DoctorAppointment.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data"method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Doctor" class="control-label"></label>
                <select asp-for="DoctorId" class="form-control" id="Doctor">
                    <option>@Model.DoctorName</option>
                </select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateSlot" class="control-label"></label>
                <select asp-for="DateSlotId" class="form-control" id="DateSlot">
                    <option>@Model.Bookeddate</option>
                </select>
                <span asp-validation-for="DateSlotId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeSlot" class="control-label"></label>
                <select asp-for="TimeSlotId" class="form-control" id="TimeSlot">
                    <option>@Model.BookedTime</option>
                </select>
                <span asp-validation-for="TimeSlotId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient" class="control-label"></label>
                <select asp-for="PatientId" class="form-control"id="Patient">
                    <option>@Model.PatientName</option>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/Cascade.js"></script>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
