@model DoctorAppointment.Models.Appointment

@{
    ViewData["Title"] = "Create";
}
<html>
<body  class="bg-success bg-opacity-75">

<h4 class="text-center">Make an appointment</h4>
<hr />

<div class="row fw-bold">
    <div class="col-md-6 offset-3">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Doctor" class="control-label"></label>

                @if (ViewBag.Doctors is SelectList)
                {
                    <select asp-for="DoctorId" class="form-control" asp-items="@ViewBag.Doctors" id="Doctor">
                        <option>--Select Doctor--</option>
                    </select>
                }              
                else
                {
                    <Select asp-for="DoctorId" class="form-control" id="Doctor">
                        <option value="@((int)ViewBag.Doctor.Id)">@ViewBag.Doctor.Name</option>
                    </Select>
                }

                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateSlot" class="control-label"></label>
                <select asp-for="DateSlotId" class="form-control" id="DateSlot">
                    <option>--Select From Available Date--</option>
                </select>
                <span asp-validation-for="DateSlotId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="TimeSlot" class="control-label"></label>
                <select asp-for="TimeSlotId" class ="form-control" id="TimeSlot">
                    <option>--Select From Available Time--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Patient" class="control-label"></label>
				<select asp-for="PatientId" class="form-control" id="Patient">
                    <option>--Select Patient from list--</option>
                </select>
            </div>
            <div class="form-group d-flex m-2">
					<input type="submit" value="Confirm" class="btn btn-primary" style="margin-left:30%;margin-right:10px" />
					@if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
                    {
                        <button class="bg-primary float-end"> <a asp-controller="Doctor" asp-action="Index" class="text-decoration-none fw-bold text-white">Back to List</a></button>
                    }
                    else
                    {
                        <button class="bg-primary float-end"><a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none ">Back To Home Page</a></button>

                    }
            </div>
        </form>
	</div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/Cascade.js"></script>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>