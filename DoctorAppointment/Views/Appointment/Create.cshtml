@model DoctorAppointment.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />

<div class="row">
    <div class="col-md-6 offset-3">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Doctor" class="control-label"></label>
                <select asp-for="DoctorId" class="form-control" id="Doctor">
                    <option>--Select Doctor--</option>
                </select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateSlot" class="control-label"></label>
                <select asp-for="DateSlotId" class ="form-control"id="DateSlot">
                    <option>--Select From Available Date--</option>
                </select>
                <span asp-validation-for="DateSlotId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="TimeSlot" class="control-label"></label>
                <select asp-for="TimeSlotId" class ="form-control" id="TimeSlot">
                    <option>--Select From Available Time--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Patient" class="control-label"></label>
				<select asp-for="PatientId" class="form-control" id="Patient">
                    <option>--Select Patient from list--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/Cascade.js"></script>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
