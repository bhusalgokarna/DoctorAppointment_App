@model DoctorAppointment.Models.TimeSlot

@{
    ViewData["Title"] = "Edit";
}

<h1>Update TimeSlot</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Doctor" class="control-label"></label>
                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailAbleTime" class="control-label"></label>
                <input asp-for="AvailAbleTime" class="form-control" />
                <span asp-validation-for="AvailAbleTime" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <div> <input type="submit" value="Update" class="btn btn-primary" /></div>
                <div style="margin-left:230px">
                    <button style="background-color:green;height:35px"><a asp-action="Index" class="text-decoration-none text-light">Back to List</a></button>
                </div>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
