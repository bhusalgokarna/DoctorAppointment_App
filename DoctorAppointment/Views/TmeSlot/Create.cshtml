@model DoctorAppointment.Models.TimeSlot

@{
    ViewData["Title"] = "Create";
}

<h1 class=" text-center">Add Timeslot</h1>


<hr />
<div class="row"style="margin-left:40%">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label"></label>
                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
            </div>
            <div class="form-group ">
				<label asp-for="AvailAbleTime" class="control-label "></label>
                <input asp-for="AvailAbleTime" class="form-control" />
                <span asp-validation-for="AvailAbleTime" class="text-danger "></span>
            </div>
            <div class="form-group d-flex">
				<div> <input type="submit" value="Add" class="btn btn-primary" /></div>
				<div style="margin-left:70px">
					<button style="background-color:green;height:35px"><a asp-action="Index" class="text-decoration-none text-light">Back to List</a></button>
				</div>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
